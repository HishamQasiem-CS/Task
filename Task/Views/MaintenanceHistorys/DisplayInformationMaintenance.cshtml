@model IEnumerable<Maintenance>
@{
    Layout = null;
}
<title>Maintenance Information</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">


<table class="table table-striped" style="text-align:center ; margin-top:10px;">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(x=>x.MaintenanceId)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.RestaurantName)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.ImpactRestaurant)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.MaintenanceDateStart)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.MaintenanceDateEnd)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.Quota)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.Comments)</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaintenanceId</td>
                <td>@item.RestaurantName</td>
                <td>@item.ImpactRestaurant</td>
                <td>@item.MaintenanceDateStart</td>
                <td>@item.MaintenanceDateEnd</td>
                <td>@item.Quota</td>
                <td>@item.Comments</td>
               
            </tr>
        }
    </tbody>
</table>
<a asp-action="All_Information" asp-controller="Home" class="btn btn-primary">Back to Home Page</a>
