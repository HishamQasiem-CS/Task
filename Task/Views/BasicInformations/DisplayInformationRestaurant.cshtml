@model IEnumerable<BasicInformation>
@{
    Layout = null;
}
<title>Restaurant Information</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">


<table class="table table-striped" style="text-align:center;  margin-top:10px;">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(x=>x.BasicInformationId)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.RestaurantName)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.StreetName)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.PhoneNumber)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.OpeningHourse)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.CloseHourse)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.ListOfNearbyLandmarks)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.RegisterationTime)</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BasicInformationId</td>
                 <td>@item.RestaurantName</td>
                  <td>@item.StreetName</td>
                   <td>@item.PhoneNumber</td>
                    <td>@item.OpeningHourse</td>
                <td>@item.CloseHourse</td>
                <td>@item.ListOfNearbyLandmarks</td>
                <td>@item.RegisterationTime</td>
            </tr>
          
        }
       
    </tbody>
    
</table>
         
        <a asp-action="All_Information" asp-controller="Home" class="btn btn-primary">Back to Page</a>