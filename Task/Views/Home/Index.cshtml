@{
    Layout = null;
}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Home Page Forms</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">



<div class="d-flex flex-column mt-5" >
    <div class="mb-3"> 
        <h1 style="text-align:center">Forms</h1>
       
@await Component.InvokeAsync("First")
</div>
<br/>
    <br />
<div class="mb-3">
@await Component.InvokeAsync("MenuComponent")
</div>
    <br />
    <br />
<div class="mb-3">
@await Component.InvokeAsync("Maintenance")
        <h3>To View all the information entered click <a asp-action="All_Information" asp-controller="Home"> here</a></h3>
</div>
</div>

<style>
    body {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 10px;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(115deg, #56d8e4 10%, #9f01ea 90%);
    }

    h1 {
        font-family: 'Arial Rounded MT';
        margin-top: 5px;
        padding-bottom: 20px;
        color: white;
    }

    h3 {
        padding-top: 20px;
        color: white;
        text-align: center;
    }

    a {
        color: black;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

